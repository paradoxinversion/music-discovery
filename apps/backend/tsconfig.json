{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*.ts"],
  "ts-node": {
    // It is faster to skip typechecking.
    // Remove if you want ts-node to do typechecking.
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "outDir": "./dist",
    "esModuleInterop": true,
    "module": "nodenext",
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["node"]
  },
  "references": [
    {
      "path": "../../common/types"
    }
  ]
}
